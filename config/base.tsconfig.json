{
  "compilerOptions": {
    "pretty": true,

    "target": "ES2018",
    "lib": ["ES2018"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,

    // "declaration": true,
    // "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noEmitOnError": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true,

    "importsNotUsedAsValues": "preserve",

    "alwaysStrict": true,
    "preserveConstEnums": true
  },
  "exclude": ["**/tsc.out", "**/cdk.out"]
}
