{
  "compilerOptions": {
    "pretty": true,
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "rootDir": ".",

    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "composite": true,
    "noEmitOnError": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true,

    "alwaysStrict": true,
    "preserveConstEnums": true,

    "newLine": "lf",

    "experimentalDecorators": true

    // "module": "commonjs",
    // "target": "ES2018"
  }
}
