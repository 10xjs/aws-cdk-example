{
  "compilerOptions": {
    "pretty": true,
    "target": "ES2018",
    "lib": ["ES2018"],
    "moduleResolution": "node",
    "composite": true,

    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noEmitOnError": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true,

    "alwaysStrict": true,
    "preserveConstEnums": true,

    "newLine": "lf",

    "experimentalDecorators": true
  },
  "exclude": ["**/tsc.out", "**/cdk.out"]
}
