{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "contacts",
      "description": "The type member is used to describe resource objects that share common attributes and relationships."
    },
    "id": {
      "type": "string",
      "description": "The id combined with type identify a globally unique resource.",
      "example": "id"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "example": "Joshua"
        },
        "lastName": {
          "type": "string",
          "example": "Motta"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      },
      "required": [
        "firstName",
        "lastName",
        "email"
      ],
      "additionalProperties": false,
      "description": "An attributes object representing some of the resourceâ€™s data."
    },
    "meta": {
      "type": "object",
      "properties": {
        "createdAt": {
          "type": "string",
          "readOnly": true,
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "readOnly": true,
          "format": "date-time"
        }
      },
      "required": [
        "createdAt",
        "updatedAt"
      ],
      "additionalProperties": false,
      "description": "A meta object containing non-standard meta-information about a resource that can not be represented as an attribute or relationship."
    }
  },
  "required": [
    "type",
    "id",
    "attributes",
    "meta"
  ],
  "additionalProperties": false
}