{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Account": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "accounts",
          "description": "The type member is used to describe resource objects that share common attributes and relationships."
        },
        "id": {
          "type": "string",
          "description": "The id combined with type identify a globally unique resource.",
          "example": "id"
        },
        "attributes": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "example": "Coalition Inc."
            }
          },
          "required": [
            "name"
          ],
          "additionalProperties": false,
          "description": "An attributes object representing some of the resource’s data."
        },
        "links": {
          "type": "object",
          "properties": {
            "self": {
              "type": "string",
              "example": "/accounts/id"
            }
          },
          "required": [
            "self"
          ],
          "additionalProperties": false,
          "description": "A links object containing links related to the resource."
        },
        "relationships": {
          "type": "object",
          "properties": {
            "contacts": {
              "type": "object",
              "properties": {
                "links": {
                  "type": "object",
                  "properties": {
                    "self": {
                      "type": "string",
                      "example": "/accounts/id/relationships/contacts"
                    },
                    "related": {
                      "type": "string",
                      "example": "/accounts/id/contacts"
                    }
                  },
                  "required": [
                    "self",
                    "related"
                  ],
                  "additionalProperties": false
                }
              },
              "required": [
                "links"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "contacts"
          ],
          "additionalProperties": false,
          "description": "A relationships object describing relationships between the resource and other JSON:API resources."
        },
        "meta": {
          "type": "object",
          "properties": {
            "createdAt": {
              "type": "string",
              "readOnly": true,
              "format": "date-time"
            },
            "updatedAt": {
              "type": "string",
              "readOnly": true,
              "format": "date-time"
            }
          },
          "required": [
            "createdAt",
            "updatedAt"
          ],
          "additionalProperties": false,
          "description": "A meta object containing non-standard meta-information about a resource that can not be represented as an attribute or relationship."
        }
      },
      "required": [
        "type",
        "id",
        "attributes",
        "links",
        "relationships",
        "meta"
      ],
      "additionalProperties": false,
      "description": "Account resource"
    },
    "Contact": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "contacts",
          "description": "The type member is used to describe resource objects that share common attributes and relationships."
        },
        "id": {
          "type": "string",
          "description": "The id combined with type identify a globally unique resource.",
          "example": "id"
        },
        "attributes": {
          "type": "object",
          "properties": {
            "firstName": {
              "type": "string",
              "example": "Joshua"
            },
            "lastName": {
              "type": "string",
              "example": "Motta"
            },
            "email": {
              "type": "string",
              "format": "email"
            }
          },
          "required": [
            "firstName",
            "lastName",
            "email"
          ],
          "additionalProperties": false,
          "description": "An attributes object representing some of the resource’s data."
        },
        "meta": {
          "type": "object",
          "properties": {
            "createdAt": {
              "type": "string",
              "readOnly": true,
              "format": "date-time"
            },
            "updatedAt": {
              "type": "string",
              "readOnly": true,
              "format": "date-time"
            }
          },
          "required": [
            "createdAt",
            "updatedAt"
          ],
          "additionalProperties": false,
          "description": "A meta object containing non-standard meta-information about a resource that can not be represented as an attribute or relationship."
        }
      },
      "required": [
        "type",
        "id",
        "attributes",
        "meta"
      ],
      "additionalProperties": false
    }
  }
}